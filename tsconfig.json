{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "types": ["node", "jest", "@testing-library/jest-dom"],
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*"],
        "@shared/*": ["shared/*"],
        "@server/*": ["server/*"]
      }
    },
    "include": [
      "src/**/*",
      "shared/**/*",
      "server/**/*",
    ]
}
